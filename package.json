{
  "name": "graphcraft",
  "version": "1.0.0-beta.24",
  "description": "A helper library that lets you focus on business logic by automatically generating GraphQLSchema and manages graphQL from Sequelize model.",
  "main": "lib/index.js",
  "scripts": {
    "publish-beta": "npm run lint && npm run build && npm publish --tag beta",
    "publish-prod": "npm run build && npm publish",
    "build": "rm -rf lib/* && babel src --out-dir lib",
    "check": "npm run lint && npm run test",
    "clean": "rm -f lib/*",
    "format": "prettier-eslint --write \"src/*.js\"",
    "jest": "jest",
    "jest-coverage": "npm run jest -- --coverage",
    "lint": "eslint src --cache",
    "test": "npm run test-db-reset && npm run jest",
    "test-db-reset": "rm -rf tests/database.db && node tests/reset-db.js"
  },
  "files": [
    "/src",
    "/lib",
    "package.json",
    "README"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almost-full-stack/graphcraft"
  },
  "keywords": [
    "graphql",
    "sequelize"
  ],
  "author": "Ali Rizwan <ali.aruz@outlook.com>",
  "contributors": [
    {
      "name": "Ali Rizwan",
      "email": "ali.aruz@outlook.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/almost-full-stack/graphcraft/issues"
  },
  "homepage": "https://github.com/almost-full-stack/graphcraft#readme",
  "dependencies": {
    "camelcase": "^5.3.1",
    "cls-hooked": "^4.2.2",
    "dataloader-sequelize": "^2.1.1",
    "graphql-relay": "^0.6.0",
    "graphql-request": "^1.8.2",
    "graphql-sequelize": "^9.3.6",
    "publish-beta": "^1.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-transform-async-to-promises": "^0.8.2",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "husky": "^1.1.4",
    "jest": "^24.9.0",
    "jest-cli": "^23.6.0",
    "prettier-eslint-cli": "^4.7.1",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.4.0",
    "sqlite3": "^4.1.1",
    "stringifier": "^2.0.0"
  },
  "peerDependencies": {
    "sequelize": "^5.18.1",
    "graphql": "^14.5.4"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint . --fix"
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  }
}
